<% if @course.errors.full_messages.present? %>
	<ul>
		<% @course.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end %>
	</ul>
<% end %> 

<%= form_for(@course) do |f| %>


	<h4 class="card-title" style="color: #FF250D;">Create Course</h4>
    <ul id="create-course"> 
		<li class="input-title"><%= f.label(:name) %></li>
        <li class="input"><%= f.text_field :name, autocomplete: "course name", placeholder:"Course Name", autofocus: true, class: "form-control" %></li>
        <li class="input-title"><%= f.label(:code) %></li>
		<li class="input"><%= f.text_field :code, autocomplete: "course code", placeholder:"Course Code", autofocus: true, class: "form-control" %></li>
        <li class="submit-btn"><%= f.submit "Sign up", class: "btn btn-danger" %></li>   

    </ul>

<% end %>