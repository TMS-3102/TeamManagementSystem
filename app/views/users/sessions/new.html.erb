<div style="padding-top: 5%;">
<div class="row">
  <div class="col-sm"></div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h4 class="card-title" style="color: #FF250D;">Login</h4>
        <ul> 
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %><br>

          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %><br>

          <%= f.submit "Log in", class: "btn btn-danger" %>
        </ul>
        <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm"></div>
</div>
</div>